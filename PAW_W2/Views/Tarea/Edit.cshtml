@using PAW_W2.Models;
@model Tarea
@{ ViewBag.Title = "Editar"; }
<h2 class="text-center mb-4">Editar Tarea</h2>

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-12 col-md-8 col-lg-6">
            <div class="card shadow-sm">
                <div class="card-body">
                    @using (Html.BeginForm("Edit", "Tarea", FormMethod.Post))
                    {
                        @Html.HiddenFor(m => m.Id)

                        <div class="mb-3">
                            @Html.LabelFor(m => m.Titulo, new { @class = "form-label fw-bold" })
                            @Html.TextBoxFor(m => m.Titulo, new { @class = "form-control", required = "required" })
                        </div>

                        <div class="mb-3">
                            @Html.LabelFor(m => m.Descripcion, new { @class = "form-label fw-bold" })
                            @Html.TextAreaFor(m => m.Descripcion, new { @class = "form-control", rows = "3", required = "required" })
                        </div>

                        <div class="mb-3">
                            @Html.LabelFor(m => m.Lenguajes, new { @class = "form-label fw-bold" })
                            @Html.TextBoxFor(m => m.Lenguajes, new { @class = "form-control" })
                        </div>

                        <div class="mb-3">
                            @Html.LabelFor(m => m.UrlRepo, new { @class = "form-label fw-bold" })
                            @Html.TextBoxFor(m => m.UrlRepo, new { @class = "form-control" })
                        </div>

                        <div class="mb-4">
                            @Html.LabelFor(m => m.Categoria, new { @class = "form-label fw-bold" })
                            @Html.TextBoxFor(m => m.Categoria, new { @class = "form-control" })
                        </div>

                        <div class="d-flex justify-content-between">
                            <button type="submit" class="btn btn-primary">Guardar</button>
                            @Html.ActionLink("Cancelar", "Index", "Tarea", new { id = Model.Id }, new { @class = "btn btn-secondary" })
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
