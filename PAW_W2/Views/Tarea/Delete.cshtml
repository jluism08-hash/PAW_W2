@using PAW_W2.Models;
@model Tarea
@{ ViewBag.Title = "Eliminar"; }
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-12 col-md-8 col-lg-6">
            <div class="card shadow-sm">
                <div class="card-body text-center">
                    <h2 class="mb-4 text-danger">¿Eliminar esta tarea?</h2>

                    <p class="fw-bold">@Model.Titulo</p>
                    <p class="text-muted mb-4">@Model.Descripcion</p>

                    @using (Html.BeginForm("DeleteConfirmed", "Tarea", FormMethod.Post))
                    {
                        @Html.HiddenFor(m => m.Id)
                        <div class="d-flex justify-content-center gap-3">
                            <button type="submit" class="btn btn-danger px-4">Sí, eliminar</button>
                            @Html.ActionLink("Cancelar", "Detail", "Tarea", new { id = Model.Id }, new { @class = "btn btn-secondary px-4" })
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

