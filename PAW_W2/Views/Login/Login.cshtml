@{ ViewBag.Title = "Login"; }
<h2 class="text-center mb-4">Login</h2>

@if (ViewBag.Msg != null)
{
    <div class="alert alert-danger text-center">@ViewBag.Msg</div>
}

<div class="card-body">
    <div class="mx-auto" style="max-width:380px">
        <form method="post" action="@Url.Action("Login","Login")">
            <div class="mb-3">
                <label for="user" class="form-label">Usuario</label>
                <input id="user" name="user" class="form-control" placeholder="Usuario" required />
            </div>
            <div class="mb-3">
                <label for="pass" class="form-label">Contraseña</label>
                <input id="pass" name="pass" type="password" class="form-control" placeholder="Contraseña" required />
            </div>
            <button type="submit" class="btn btn-primary w-100">Entrar</button>
        </form>
    </div>
</div>


